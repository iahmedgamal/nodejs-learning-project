
<%- include('../includes/head.ejs')  %>

  </head>
  <body>
    <%- include('../includes/navigation.ejs')  %>


    <main>
      <div class="form-container">
        <form action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product <% } %>" method="post">

          <div class="element-form">
            <label for="productName"> Product name</label>
            <input type="text" name="productName" value="<%= editing ? product.title : '' %>"/>
          </div>

          <div class="element-form">
            <label for="imageUrl">imageUrl</label>
            <input type="text" name="imageUrl" value="<%= editing ? product.imageUrl : '' %>" />
          </div>

          <div class="element-form">
            <label for="price">Price</label>
            <input type="number" name="price" value="<%= editing ? product.price : '' %>"/>
          </div>

          <div class="element-form">
            <label for="description">Description</label>
            <textarea id="description" rows="5" name="description"><%= editing ? product.description : '' %></textarea>
          </div>
          <button type="submit">
            <% if (editing) { %> 
              Edit This Product 
            <% } else { %> 
              Add A New Product 
            <% } %> 
          </button>
      </div>
    </main>
    <%- include('../includes/end.ejs')  %>

